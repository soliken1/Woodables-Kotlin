<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wholeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transpa">


    <FrameLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <View
        android:id="@+id/breaklinebottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkgrey"/>

    <!-- Navigation bar -->
    <LinearLayout

        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitebeigge"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/home"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/cinbtn" />

        <ImageView
            android:id="@+id/community"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/socialicon" />

        <ImageView
            android:id="@+id/hammer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/dghammer" />

        <ImageView
            android:id="@+id/messenger"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/dgmessage" />

        <ImageView
            android:id="@+id/documents"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/dgdoc" />
    </LinearLayout>
    <!--Ari ra kutob ang navagation bar -->
</LinearLayout>