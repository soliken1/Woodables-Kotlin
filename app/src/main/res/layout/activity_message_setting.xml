<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MessageSettingActivity">

    <!--- Start of Top Portion -->

    <LinearLayout
        android:id="@+id/searchbargroup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/primarycolor"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:textColor="@color/textcolor"
            android:text="My Profile"
            android:textSize="20sp" />

    </LinearLayout>



    <!--- End of Top Portion -->
    <!--- Start of Middle portion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/transpa"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/profilecorner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/profilepicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true"
                android:contentDescription="@string/logo"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="Krusty Crab Co."
                    android:gravity="bottom"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold"
                    android:layout_below="@+id/profilepicture"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/profileCategory"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/textcolor"
                    android:layout_below="@+id/profileName"
                    android:text="Company"/>

            </LinearLayout>
        </LinearLayout>

        <!--- Start of Messaging Menu Setting -->

        <!-- First Attribute Template -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="General Settings"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/user_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Username"
                android:textColor="@color/textcolor"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notifandsound"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/not_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Notification and Sounds"
                android:textColor="@color/textcolor"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/lang_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Languages"
                android:textColor="@color/textcolor"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>




    </LinearLayout>
    <!--- End of Middle portion -->


</LinearLayout>