<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MessageSettingActivity">

    <!--- Start of Top Portion -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cinnamon"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:background="@color/cinnamon"
            android:src="@drawable/leftarrow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:paddingEnd="40dp"
            android:text="Message Settings"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>



    <!--- End of Top Portion -->
    <!--- Start of Middle portion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/transpa"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilepicture"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_img"
            android:src="@drawable/catprofile" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Catto Inc."

            android:textSize="25sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <!--- Start of Messaging Menu Setting -->
        <!-- First Attribute Template -->

        <LinearLayout
            android:id="@+id/activeStatus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/activestatus" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Active Status"
                android:textColor="@color/darkgrey"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatmessages"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/chats_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Chats"
                android:textColor="@color/darkgrey"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/messageReq"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/req_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Message Request"
                android:textColor="@color/darkgrey"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="General Settings"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/user_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Username"
                android:textColor="@color/darkgrey"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notifandsound"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/not_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Notification and Sounds"
                android:textColor="@color/darkgrey"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/lang_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="4"
                android:text="Languages"
                android:textColor="@color/darkgrey"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/contacts"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/cont_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10dp"
                android:text="Contacts"
                android:textColor="@color/darkgrey"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.50"
                android:src="@drawable/continuebutton" />
        </LinearLayout>

        <!--- End of Messaging Menu Setting -->

    </LinearLayout>
    <!--- End of Middle portion -->


</LinearLayout>