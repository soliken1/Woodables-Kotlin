<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/textbox_4curvedcorners"
    android:backgroundTint="@color/secondarycolor"
    app:cardElevation="8dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="match_parent"
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:layout_height="wrap_content"
            android:text="Company Name" />

        <TextView
            android:id="@+id/jobTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/textcolor"
            android:text="Job Title" />

        <TextView
            android:id="@+id/payRangeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/textcolor"
            android:text="Pay Range" />

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/textcolor"
            android:text="Details" />

        <TextView
            android:id="@+id/requirements1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/textcolor"
            android:text="Requirements 1" />

        <TextView
            android:id="@+id/requirements2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/textcolor"
            android:text="Requirements 2" />

        <TextView
            android:id="@+id/requirements3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/textcolor"
            android:text="Requirements 3" />

        <TextView
            android:id="@+id/hasBenefitsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/textcolor"
            android:text="Has Benefits" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="@color/red"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>