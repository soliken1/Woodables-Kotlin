<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transpa">

    <LinearLayout
        android:id="@+id/searchbargroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cinnamon"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/leftarrow"
            android:background="@color/cinnamon"/>

        <SearchView
            android:id="@+id/searchBarProfile"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textbox_4curvedcorners"
            android:backgroundTint="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"/>



        <ImageView

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="7dp"
            android:clipToOutline="true"
            android:contentDescription="@string/pfp"
            android:src="@drawable/pfp2"
            android:background="@drawable/rounded_corners"/>

    </LinearLayout>


    <View
        android:id="@+id/breaklinetop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/searchbargroup"
        android:background="@color/white" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/spartan_bold"
            android:paddingTop="4dp"
            android:text="@string/listing_view"
            android:textAlignment="center"
            android:textColor="@color/darkgrey"
            android:textSize="20sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transpa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:elevation="8dp"
                android:background="@drawable/listing">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:contentDescription="@string/pfp"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anita" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="30dp"
                            android:fontFamily="@font/spartan_medium"
                            android:text="@string/anita_project"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/spartan_medium"
                            android:textColor="@color/black"
                            android:text="@string/lorem_ipsum"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:layout_weight="0.10"
                        android:contentDescription="@string/woodworker"
                        android:src="@drawable/paperplane" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:padding="8dp"
                        android:contentDescription="@string/woodworker"
                        android:src="@drawable/linkblack" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.75"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="@color/cinnamon"
                        android:text="@string/apply"
                        android:textSize="7sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.75"
                        android:backgroundTint="@color/indochine"
                        android:text="@string/save"
                        android:textSize="7sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1.20"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/interested"
                        android:textSize="7sp" />
                </LinearLayout>
            </LinearLayout>





        </LinearLayout>
    </ScrollView>

    <!-- Navigation bar -->

    <View
        android:id="@+id/breaklinebottom"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="2dp"/>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/home"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/community"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/chat" />

        <ImageView
            android:id="@+id/hammer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/hammer" />

        <ImageView
            android:id="@+id/messenger"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/messenger" />

        <ImageView
            android:id="@+id/documents"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/approve" />
    </LinearLayout>
    <!--Ari ra kutob ang navagation bar -->

</LinearLayout>


