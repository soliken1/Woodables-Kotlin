<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityFragment">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/searchbargroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cinnamon"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:src="@drawable/leftarrow"
                android:background="@color/cinnamon"/>

            <SearchView
                android:id="@+id/searchBarProfile"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textbox_4curvedcorners"
                android:backgroundTint="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.5"

                android:src="@drawable/whitesetting"
                android:background="@color/cinnamon"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/optionpanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filterpostbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/optionsetting"/>

            <Button
                android:id="@+id/bestpostbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:backgroundTint="@color/indochine"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Best"/>

            <Button
                android:id="@+id/hotpostbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:backgroundTint="@color/schoolbusyellow"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Hot"/>

            <Button
                android:id="@+id/newpostbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:backgroundTint="@color/cinnamon"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="New"
                />

            <Button
                android:id="@+id/toppostbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:backgroundTint="@color/btnColor"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Top" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >

                <LinearLayout
                    android:id="@+id/postContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>

            <ImageView
                android:id="@+id/addpost"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cinnamonadd"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>